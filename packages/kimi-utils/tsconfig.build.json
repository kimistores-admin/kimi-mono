{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "composite": true,
      "strict": true,
      "skipLibCheck": true,
      "declaration": true,
      "noEmit": false,
      "emitDeclarationOnly": true,
      "outDir": "build",
      "rootDir": "./src",
      "baseUrl": ".", 
      "paths": {
        "src/*": ["./src/*"]
      }
    },
    "include": ["src/**/*.ts*"]
  }